@if (_show)
{
    <div class="message-box-overlay fade-in-el">
        <div class="message-box">
            <p>@Message</p>
            <button @onclick="OnConfirmAction.Invoke">@OnConfirmBtnTxt</button>
            <button @onclick="OnDeclineAction.Invoke">@OnConfirmBtnTxt</button>
            <button @onclick="OnCloseWindowClick">@OnCloseWindowBtnTxt</button>
        </div>
    </div>

    <div class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@Title</h5>
                    <button type="button" class="close" aria-label="Close" @onclick="OnCloseWindowClick">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>@Message</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" @onclick="OnConfirmAction.Invoke">
                        @OnConfirmBtnTxt
                    </button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal" @onclick="OnDeclineAction.Invoke">
                        @OnDeclineBtnTxt
                    </button>
                </div>
            </div>
        </div>
    </div>
}



@code {

    [Parameter, EditorRequired]
    public required string Message { get; set; }

    [Parameter, EditorRequired]
    public required Action OnConfirmAction { get; set; }

    [Parameter, EditorRequired]
    public required Action OnDeclineAction { get; set; }

    [Parameter]
    public string Title { get; set; } = string.Empty;

    [Parameter]
    public string OnConfirmBtnTxt { get; set; } = "Confirm";

    [Parameter]
    public string OnDeclineBtnTxt { get; set; } = "Decline";

    [Parameter]
    public string OnCloseWindowBtnTxt { get; set; } = "X";

    private bool _show = true;

    private void OnCloseWindowClick()
    {
        _show = false;
        StateHasChanged();
    }

}