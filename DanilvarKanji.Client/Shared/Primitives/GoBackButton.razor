    <b>
        @(new string($"\u25c0 {Loc["BackButton"]}"))
    </b>
</button>

@code {
    [Inject] public Js Js { get; set; } = null!;

    [Inject] public IStringLocalizer<App> Loc { get; set; } = null!;
}