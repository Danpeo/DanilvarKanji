<div class="drawer-wrapper @(_isOpen ? "slide" : "")">
    <div class="drawer-mask"></div>
    <div class="drawer bg-secondary">
        @if (_activeCharacter != null)
        {
            <div class="drawer-controls">
                <button class="btn btn-secondary" @onclick="Close">X</button>
            </div>
            <div class="drawer-content">
                <div class="trail-details">
                    <h1 class="txt-mid-pink display-1 text-center jap-font">
                        @CharacterService.GetCharacterMnemonicByCulture(_activeCharacter, _culture)
                    </h1>
                    <h6 class="mb-3 text-muted">
                        <span class="oi oi-map-marker"></span>@_activeCharacter.JlptLevel
                    </h6>
                    <div class="mt-4">
                        <span class="mr-5">
                            <span class="oi oi-clock mr-2"></span> @_activeCharacter.Id
                        </span>
                        <span><span class="oi oi-infinity mr-2"></span> @_activeCharacter.StrokeCount km</span>
                    </div>
                    <p class="mt-4">@_activeCharacter.JlptLevel</p>
                </div>
            </div>
        }
    </div>
</div>