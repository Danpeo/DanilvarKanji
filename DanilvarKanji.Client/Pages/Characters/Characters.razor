@page "/Characters"

@if (CharacterItems == null)
{
    <DisplayLoading></DisplayLoading>
}
else
{
    <h3 class="mb-5">Products</h3>

    int productCount = CharacterItems.Count();

    if (productCount > 0)
    {
        <div class="row mt-3">
            <DisplayCharacters CharacterItems="CharacterItems"/>
        </div>
    }
}