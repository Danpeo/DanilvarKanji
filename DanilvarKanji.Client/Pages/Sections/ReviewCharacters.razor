@page "/ReviewCharacters"
@using DanilvarKanji.Client.State

@if (!string.IsNullOrEmpty(_learningId))
{
    <ReviewCharactersSection Learningid="@_learningId" />
}
else
{
    <Message Text="No characters to review :(" />
}

@code {
    [Inject]
    public required AppState AppState { get; set; }
    
    private string? _learningId;

    protected override void OnInitialized()
    {
        _learningId = AppState.ReviewCharState.NextToReview.Id;
    }

}